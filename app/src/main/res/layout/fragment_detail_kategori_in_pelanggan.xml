<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".ui.pelanggan.detail.DetailKategoriInPelangganFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nama_kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/gilroy_bold"
                android:textColor="@color/almost_black"
                android:textSize="18sp"
                tools:text="Nama Kategori" />

            <TextView
                android:id="@+id/tv_nama_penjahit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nama penjahit"/>

            <TextView
                android:id="@+id/tv_id_penjahit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="id penjahit"/>

            <ImageView
                android:id="@+id/img_kategori"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_bahan_jahit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/gilroy_medium"
                android:textColor="@color/not_black"
                tools:text="Bahan Jahit" />

            <TextView
                android:id="@+id/tv_harga_bahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/gilroy_medium"
                android:textColor="@color/not_black"
                tools:text="Harga Bahan" />

            <TextView
                android:id="@+id/tv_ongkos_penjahit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/gilroy_medium"
                android:textColor="@color/not_black"
                tools:text="Ongkos Penjahit" />

            <TextView
                android:id="@+id/tv_lama_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/gilroy_medium"
                android:textColor="@color/not_black"
                tools:text="Lama Waktu" />

            <TextView
                android:id="@+id/tv_ket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/gilroy_medium"
                android:textColor="@color/not_black"
                tools:text="Keterangan" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_lakukan_jahit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/custom_button"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center_horizontal|center"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="Lakukan Pesanan"
                android:textAppearance="@style/button_login_register" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.core.widget.NestedScrollView>